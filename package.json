{
	"name": "astro-tailwind-react-template",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev",
		"build": "astro check && astro build",
		"preview": "astro preview",
		"astro": "astro",
		"format": "npx prettier --write src/**/*.astro && biome check --write src/*",
		"format:fix": "npx prettier --write src/**/*.astro && biome check --write --fix src/*",
		"lint": "biome check src/*",
		"knip": "knip"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/react": "^4.1.2",
		"@astrojs/sitemap": "^3.2.1",
		"@astrojs/tailwind": "^5.1.4",
		"astro": "^5.1.1",
		"tailwind-variants": "^0.3.0",
		"tailwindcss": "^3.4.17"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^22.10.3",
		"knip": "^5.41.1",
		"prettier": "^3.4.2",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"typescript": "^5.7.2"
	}
}
